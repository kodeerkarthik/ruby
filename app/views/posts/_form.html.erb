<div class='row'>
  <div class='col-4'></div>
  <div class='col-4 login_Body'>
    <%= form_for post, :id=>'form1', remote:true do |f| %>
      <div class="row">
        <%= f.label :title, :class=>'col-sm-2 text-right form_lable'%>
        <div class="col-sm-10">
          <%= f.text_field :title,:class=>"form-control mb-3"  %>
        </div>
      </div>
    
      <div class="row">
        <%= f.label :image,:class=>'col-sm-2 text-right form_lable'  %>
        <div class="col-sm-10">
          <%= f.file_field :image ,:class=>" mb-3", :id=>'imgInp'%>
          <%= image_tag('#', alt:'your Image',:id=>'blah',:width=>'75',:class=>'mb-2 rounded-circle')%>
        </div>
      </div>

      <div class="row">
        <%= f.label :body,:class=>'col-sm-2 text-right form_lable'%>
        <div class="col-sm-10">
          <%= f.text_area :body ,:class=>"form-control mb-3" %>
        </div>
      </div>
    
      <%= f.submit({:class => "btn btn-success"}) %>
    <% end %>
  </div>
  <div class='col-4'></div>
</div>

<script>
  function readURL(input) {
    if (input.files && input.files[0]) {
      var reader = new FileReader();

      reader.onload = function (e) {
          $('#blah').attr('src', e.target.result);
      }

      reader.readAsDataURL(input.files[0]);
    }
  }

  $("#imgInp").change(function(){
    readURL(this);
  });

</script>



