  <%= stylesheet_link_tag    'https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css'%>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>


  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.css" />
</head>
<body>
  <nav class="navbar navbar-dark bg-dark">
    <%= image_tag("logo.png",:width=>'100', :height=>'30' )%>
      <% if admin_signed_in? %>
        <%= link_to 'Home', home_path, :class => "btn btn-outline-info"%>
        <%= link_to 'New article', new_article_path, id:'new_article', :class => "btn btn-outline-info"%>
        <form class="form-inline">
          <span class='text-light mr-3'>Logged in as <strong> <%= current_admin.email %></strong>.</span>
          <%= link_to 'Edit profile', edit_admin_registration_path, :class => "btn btn-outline-warning"%> |
          <%= link_to "Logout", destroy_admin_session_path, method: :delete , :class => "btn btn-outline-info"%>
        </form>
      <% else %>
        <form class="form-inline">
          <a href="#info" rel="modal:open" class="btn btn-sm btn-success mr-3">Project Info</a>
          <%= link_to "Register", new_admin_registration_path , :class => 'btn btn-light mr-3 btn-sm'%> |
          <%= link_to "Login", new_admin_session_path, :class => 'btn btn-info mr-3 btn-sm' %>

          <!-- <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
            Launch demo modal
          </button> -->          
        </form>
      <% end %> 
    
  </nav>
  <div>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <%= yield %>
      <%= render :partial => '/welcome/modal' %>
      <%= render :partial => '/devise/sessions/info' %>
  </div>
</body>
</html>
