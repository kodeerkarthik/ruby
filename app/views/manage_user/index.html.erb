<html>
	<body class='index_body' id='index_body'>
		<div class='shade pt-5'>
			<div class="accordion" id="accordionExample">
				<% @users.each do |user| %>
					<div class='row alert alert-warning mb-0 mt-4 users' data-toggle="collapse" data-target="#articles" aria-expanded="true" aria-controls="collapseOne">
						<b class='col'><%= user.email %></b>
						<b class='col'><%= user.username %></b>
						<b class='col'>
							<%if user.confirmed_at.present? %>
								<b>
									User Confirmed								
								</b>
								<%else%>
								<b>
									<%= link_to "Resend confirmation mail", new_user_confirmation_path %>
								</b>
							<%end%>
						</b>
						<%if user.admin==true%>
							<b class='float-right text-danger'>Admin</b>
						<%else%>
							<b class='float-right'>User</b>
						<%end%>
						<b class='col'>
							<%if user.admin==true%>
								<b>
								</b>
							<%else%>
								<%if user.deactivated.present? %>
									<b>
										<%=link_to "Activate the user", activate_path(user_id: user), method: :post, data: { confirm: "Are you sure You want to Activate Account ?" } %>
									</b>
									<%else%>
									<b>
										<%=link_to "Deactivate the user", deactivate_path(user_id: user), method: :post, data: { confirm: "Are you sure You want to Deactivate Account?" } %>
									</b>
								<%end%>
							<%end%>
						</b>
					</div>
					<% @articles.each do |article| %>
						<%if article.User_id==user.id%>
							<ul class="list-group articles collapse" id="articles" >
								<li class="list-group-item list-group-item-primary"><%= link_to article.title, article_path(article)%></li>
							</ul>
						<%end%>
					<%end%>
				<% end %>
			</div>	
		</div>
	</body>
</html>
