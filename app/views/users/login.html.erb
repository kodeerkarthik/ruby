<html>
	<head>
		<title>Login and register</title>
	</head>
  <body class='index_body'>
    <div class='shade'>
      <div class="row">
        <div class="col-3"></div>
        <div class="col-6 login_Body">
          <form  action='/sessions' method='POST'>
            <h1 class="alert-info btn-sm mb-5 text-center">LOGIN HERE</h1>
            <input class="form-control" type='hidden' name='authenticity_token' value='<%=form_authenticity_token%>'>
            <div class="row">
              <label class="col-sm-2 col-form-label text-right form_lable">Email</label>
              <div class="col-sm-10">
                <input type="email" name='login[email]' placeholder="email" class="form-control mb-3"/>
              </div>
            </div>
            <div class="row">
              <label class="col-sm-2 col-form-label text-right form_lable">Password</label>
              <div class="col-sm-10">
                <input type="password" name='login[password]' placeholder="password" class="form-control mb-3"/>
                <input class="form-control btn btn-info" type='submit' name='submit' value="Login">
              </div>
            </div> 
            <div class='mt-4'>         
              <%= link_to 'Cancel',  '/', :class => 'btn btn-secondary btn-sm'  %>
              <%= link_to 'Register',  '/register', :class => 'btn btn-primary btn-sm'  %>	
            </div>
          </form>
        </div>
        <div class="col-3"></div>
      </div>
    </div>
	</body>
</html>
