<html>
	<head>
		<title>Login and register</title>
	</head>
    <body class='index_body'>
      <div class='shade'>
        <div class="row">
          <div class="col-3"></div>
          <div class="col-6 login_Body">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <h1 class="alert-info btn-sm mb-5 text-center">Forgot your password?</h1>

              <div class="row">
                <%= f.label :email,:class=>'col-sm-3 col-form-label text-right form_lable' %>
                <div class='col-sm-9'>
                  <%= f.email_field :password, autofocus: true, autocomplete: "email",:class=>'form-control mb-3' %>
                  <%= f.submit "Send me reset password instructions",:class=>'btn btn-warning form-control mt-2' %>
                </div>
              </div>

              <div class='mt-4'> 
                <%= render "devise/shared/links" %>
              </div>

            <% end %>
          </div>
          <div class="col-3"></div>
        </div>
      </div>  
	</body>
</html>




